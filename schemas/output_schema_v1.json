{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blueprint Manufacturing Specification",
  "type": "object",
  "required": ["metadata", "specifications"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["file_name", "processed_at"],
      "properties": {
        "file_name": { "type": "string" },
        "processed_at": { "type": "string", "format": "date-time" }
      }
    },
    "specifications": {
      "type": "object",
      "properties": {
        "dimensions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "value", "unit", "confidence"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["length", "width", "height", "diameter", "radius"]
              },
              "value": { "type": "number" },
              "unit": {
                "type": "string",
                "enum": ["mm", "cm", "inch"]
              },
              "tolerance": { "type": ["string", "null"] },
              "source_text": { "type": "string" },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              }
            }
          }
        },
        "material": {
          "type": ["object", "null"],
          "properties": {
            "name": { "type": "string" },
            "standard": { "type": ["string", "null"] },
            "source_text": { "type": "string" },
            "confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "source_text": { "type": "string" },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              }
            }
          }
        }
      }
    }
  }
}
